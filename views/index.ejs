<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <p class="py-12">Welcome to <%= title %></p>
    <div class="messages-container">
    <% if (messages.length > 0) { %>
      <% messages.forEach(message => { %>
        <div class="message-container flex flex-col w-1/2 border-2 my-2 bg-white odd:bg-gray-100">
          <h3 class="message text-xl"><%= message.text %></h3>
          <p class="text-sm"><%= message.user %></p>
          <p class="text-xs"><%= message.added.toLocaleString() %></p>
        </div>
      <% }) %>
    </div>
    <% } else { %>
      <p>There are no messages to display.</p>
    <% } %>
    <div>
      <a href="/new">
        <button>Click here to add new message</button>
      </a>
    </div>
  </body>
</html>
